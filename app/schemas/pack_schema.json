{
  "$defs": {
    "CheckDefinition": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "title": "Id",
          "type": "string"
        },
        "area": {
          "title": "Area",
          "type": "string"
        },
        "title": {
          "title": "Title",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "type": "string"
        },
        "severity": {
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "title": "Severity",
          "type": "string"
        },
        "required_fields": {
          "items": {
            "type": "string"
          },
          "title": "Required Fields",
          "type": "array"
        },
        "actions": {
          "items": {
            "type": "string"
          },
          "title": "Actions",
          "type": "array"
        },
        "metrics": {
          "items": {
            "type": "string"
          },
          "title": "Metrics",
          "type": "array"
        },
        "question_if_unknown": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Question If Unknown"
        },
        "followup_questions": {
          "items": {
            "type": "string"
          },
          "title": "Followup Questions",
          "type": "array"
        },
        "retrieval_queries": {
          "items": {
            "type": "string"
          },
          "title": "Retrieval Queries",
          "type": "array"
        },
        "evidence_requirements": {
          "additionalProperties": true,
          "title": "Evidence Requirements",
          "type": "object"
        },
        "evidence_scoring": {
          "additionalProperties": true,
          "title": "Evidence Scoring",
          "type": "object"
        },
        "coverage_expectations": {
          "additionalProperties": true,
          "title": "Coverage Expectations",
          "type": "object"
        },
        "question_group": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Question Group"
        },
        "applies_to_stages": {
          "items": {
            "type": "string"
          },
          "title": "Applies To Stages",
          "type": "array"
        },
        "compliance": {
          "default": false,
          "title": "Compliance",
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "area",
        "title",
        "description",
        "severity"
      ],
      "title": "CheckDefinition",
      "type": "object"
    },
    "StageBand": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "title": "Id",
          "type": "string"
        },
        "label": {
          "title": "Label",
          "type": "string"
        },
        "min_headcount": {
          "minimum": 0,
          "title": "Min Headcount",
          "type": "integer"
        },
        "max_headcount": {
          "anyOf": [
            {
              "minimum": 0,
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Max Headcount"
        },
        "description": {
          "title": "Description",
          "type": "string"
        }
      },
      "required": [
        "id",
        "label",
        "min_headcount",
        "description"
      ],
      "title": "StageBand",
      "type": "object"
    },
    "TemplatesConfig": {
      "additionalProperties": false,
      "properties": {
        "markdown_template": {
          "title": "Markdown Template",
          "type": "string"
        },
        "section_titles": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Section Titles",
          "type": "object"
        }
      },
      "required": [
        "markdown_template"
      ],
      "title": "TemplatesConfig",
      "type": "object"
    },
    "WeightsConfig": {
      "additionalProperties": false,
      "properties": {
        "area_weights": {
          "additionalProperties": {
            "type": "number"
          },
          "title": "Area Weights",
          "type": "object"
        },
        "severity_weights": {
          "additionalProperties": {
            "type": "number"
          },
          "title": "Severity Weights",
          "type": "object"
        },
        "compliance_multiplier": {
          "default": 1.25,
          "minimum": 1.0,
          "title": "Compliance Multiplier",
          "type": "number"
        },
        "unknown_penalty": {
          "default": 0.1,
          "maximum": 1,
          "minimum": 0,
          "title": "Unknown Penalty",
          "type": "number"
        }
      },
      "required": [
        "area_weights",
        "severity_weights"
      ],
      "title": "WeightsConfig",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "properties": {
    "version": {
      "title": "Version",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "disclaimer": {
      "default": "This is not legal advice; consider reviewing with counsel.",
      "title": "Disclaimer",
      "type": "string"
    },
    "stages": {
      "items": {
        "$ref": "#/$defs/StageBand"
      },
      "title": "Stages",
      "type": "array"
    },
    "weights": {
      "$ref": "#/$defs/WeightsConfig"
    },
    "checks": {
      "items": {
        "$ref": "#/$defs/CheckDefinition"
      },
      "title": "Checks",
      "type": "array"
    },
    "templates": {
      "$ref": "#/$defs/TemplatesConfig"
    },
    "field_query_hints": {
      "additionalProperties": {
        "additionalProperties": true,
        "type": "object"
      },
      "title": "Field Query Hints",
      "type": "object"
    },
    "question_groups": {
      "additionalProperties": {
        "additionalProperties": true,
        "type": "object"
      },
      "title": "Question Groups",
      "type": "object"
    },
    "prompt_overrides": {
      "additionalProperties": true,
      "title": "Prompt Overrides",
      "type": "object"
    }
  },
  "required": [
    "version",
    "name",
    "stages",
    "weights",
    "checks",
    "templates"
  ],
  "title": "ConsultantPack",
  "type": "object"
}